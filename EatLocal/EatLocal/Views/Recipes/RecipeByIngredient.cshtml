@model TagModel
@{ using (Html.BeginForm())
    {
        <br />
        <br/>
        <br/>
        <p>Select the Food You'd Like to Search</p>

        <form method="post" asp-controller="Recipe" asp-action="SeacrchByIngredient">
            
            <label for="tag">Local Food</label>
            <select asp-for="FoodId" asp-items="@Model.FoodList"></select>

            <br /><button type="submit">Submit</button>
        </form>

        <a asp-action="Details">Back to Recipe</a>
    }
}
