@model IEnumerable<EatLocal.Models.DailyMealPlan>

@{
    ViewData["Title"] = "Index";
}
<br/>
<br/>
<h1 align="center" style="color:slategray;"> Your Meal Planner</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DayOfWeek)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DayOfWeek)
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Recipes" asp-route-id="@item.RecipeID">@item.Recipe.Name</a>
                    </td>


                    @Html.HiddenFor(modelItem => item.ApplicationUser.Id)

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MealPlanID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.MealPlanID">Delete</a> |
                        <a asp-action="SaveRecipes" asp-route-id="@item.MealPlanID"> Save/Change Recipe</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
